# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Security Configuration
SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Configuration
API_V1_STR=/api/v1
FRONTEND_URL=http://localhost:5173

# Firebase Configuration
# Option 1: Use file path for local development
FIREBASE_CREDENTIALS=/path/to/your/serviceAccountKey.json
# Option 2: Use JSON content for production deployment (recommended)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project",...}

# AI Service Configuration
GEMINI_API_KEY=your-google-gemini-api-key

# SMS Service Configuration (Optional)
SMS_API_BASE_URL=https://your-sms-service-endpoint.com

# Agent API Configuration (Optional)
AGENT_API_BASE_URL=https://your-agent-api-endpoint.com

# Environment
ENVIRONMENT=development

# CORS Configuration (Optional)
# ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
